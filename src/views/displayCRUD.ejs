<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
  
    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
  <title>Document</title>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }

    .btn{
      cursor: pointer;
    }
  </style>
</head>

<body>
  <table>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Address</th>
      <th>FirstName</th>
      <th>LastName</th>
      <th>Phone number</th>
      <th>RoleId</th>
      <th>Position</th>
      <th>Action</th>
    </tr>

    <% for(var i=0; i < dataTable.length; i++) { %>
      <tr>
        <td>
          <%= dataTable[i].id %>
        </td>
        <td>
          <%= dataTable[i].email%>
        </td>
        <td>
          <%= dataTable[i].address%>
        </td>
        <td>
          <%= dataTable[i].firstName%>
        </td>
        <td>
          <%= dataTable[i].lastName%>
        </td>
        <td>
          <%= dataTable[i].phoneNumber%>
        </td>
        <td>
          <%= dataTable[i].roleId%>
        </td>
        <td>
          <%= dataTable[i].positionId%>
        </td>
        <td>
          <a class="btn btn-edit btn-primary" href="/edit-crud?id=<%= dataTable[i].id %>">Edit</a>
          <a class="btn btn-edit btn-danger" href="/delete-crud?id=<%= dataTable[i].id %>">Delete</a>
          

        </td>
      </tr>
      <% } %>
  </table>
</body>

</html>